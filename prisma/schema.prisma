generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LineRegistration {
  id           String   @id @default(cuid())
  nameKanji    String
  nameKatakana String
  phoneNumber  String
  companyName  String
  email        String
  birthDate    DateTime
  lineUserId   String?  // LINEユーザーID
  lineDisplayName String? // LINE表示名
  linePictureUrl String? // LINEプロフィール画像URL
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("line_registrations")
}
